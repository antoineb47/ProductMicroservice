{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=data\\productmicroservice.db"
  },
  "ApiSettings": {
    "Port": 5000,
    "DatabasePath": "data",
    "SwaggerEnabled": true,
    "EnableSensitiveDataLogging": true
  },
  "AllowedOrigins": [
    "http://localhost:41528",
    "http://localhost:3000"
  ],
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
